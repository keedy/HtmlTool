<Window x:Class="HtmlTool.RegexCtl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegexCtl" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Height="23" Name="RegexTextBox"></TextBox>
        <Button Name="match" Grid.Row="1" Height="23" Width="75" Margin="100,0,0,0" HorizontalAlignment="Left" Click="match_Click">匹配</Button>
        <Button Name="replace" Grid.Row="1" Height="23" Width="75" Margin="0,0,100,0" HorizontalAlignment="Right" Click="replace_Click">替换</Button>
    </Grid>
</Window>
